#!/bin/execlineb -P

define USER mkryss
define ID 1000

export XDG_RUNTIME_DIR "/run/${ID}"
export DBUS_SESSION_BUS_ADDRESS "unix:path=/run/${ID}/bus"

foreground { install -d -o ${USER} -g ${USER} /run/${ID} }
foreground { install -d -o ${USER} -g ${USER} /run/${ID}/service }
s6-setuidgid ${USER} exec s6-svscan -d 3 /run/${ID}/service
